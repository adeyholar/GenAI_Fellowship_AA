{
    "version": "0.2.0",
    "configurations": [
        {
            "name": "Python: Current File",
            "type": "python",
            "request": "launch",
            "program": "${file}",
            "console": "integratedTerminal",
            "justMyCode": true
        },
        {
            "name": "Streamlit: Run Current File",
            "type": "python",
            "request": "launch",
            "module": "streamlit",
            "args": [
                "run",
                "${file}",
                "--server.port", "8501",
                "--server.headless", "true"
            ],
            "console": "integratedTerminal",
            "cwd": "${fileDirname}",
            "justMyCode": true
        }
    ]
}