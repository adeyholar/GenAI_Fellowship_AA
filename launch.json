{
  "version": "0.2.0",
  "configurations": [
    {
      "name": "Streamlit: Run Current File",
      "type": "python",
      "request": "launch",
      "console": "integratedTerminal",
      "program": "${workspaceFolder}/venv/Scripts/streamlit.exe",  // Use .exe for Windows
      "args": ["run", "${file}"],
      "env": {
        "PYTHONPATH": "${workspaceFolder}/venv/Scripts"
      },
      "cwd": "${workspaceFolder}"
    },
    {
      "name": "Python: Current File",
      "type": "python",
      "request": "launch",
      "program": "${file}",
      "console": "integratedTerminal",
      "cwd": "${workspaceFolder}"
    }
  ]
}